<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>YumCourt</display-name>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Customer Servlet -->
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>com.yumcourt.servlet.CustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/customer</url-pattern>
    </servlet-mapping>

    <!-- Order Servlet -->
    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>com.yumcourt.servlet.OrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <!-- Menu Servlet -->
    <servlet>
        <servlet-name>MenuServlet</servlet-name>
        <servlet-class>com.yumcourt.servlet.MenuServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MenuServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>

    <!-- Restaurant Servlet -->
    <servlet>
        <servlet-name>RestaurantServlet</servlet-name>
        <servlet-class>com.yumcourt.servlet.RestaurantServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RestaurantServlet</servlet-name>
        <url-pattern>/restaurant</url-pattern>
    </servlet-mapping>

    <!-- Delivery Executive Servlet -->
    <servlet>
        <servlet-name>DeliveryExecutiveServlet</servlet-name>
        <servlet-class>com.yumcourt.servlet.DeliveryExecutiveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeliveryExecutiveServlet</servlet-name>
        <url-pattern>/delivery-executive</url-pattern>
    </servlet-mapping>

    <!-- Kart Servlet -->
    <servlet>
        <servlet-name>KartServlet</servlet-name>
        <servlet-class>com.yumcourt.servlet.KartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>KartServlet</servlet-name>
        <url-pattern>/kart</url-pattern>
    </servlet-mapping>

    <!-- Address Servlet -->
    <servlet>
        <servlet-name>AddressServlet</servlet-name>
        <servlet-class>com.yumcourt.servlet.AddressServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddressServlet</servlet-name>
        <url-pattern>/address</url-pattern>
    </servlet-mapping>

    <!-- Contact Servlet -->
    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>com.yumcourt.servlet.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>

</web-app>
